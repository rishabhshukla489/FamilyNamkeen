{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="main-page-content" id="main-page-content">
      {{ page.content }}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const contentDiv = document.getElementById('main-page-content');
  if (!contentDiv) return;
  
  // Find all images within the content
  const images = contentDiv.querySelectorAll('img');
  
  if (images.length > 0) {
    // Create a container for images
    const imageGrid = document.createElement('div');
    imageGrid.className = 'image-grid';
    
    // Create a container for non-image content
    const textContent = document.createElement('div');
    textContent.className = 'text-content';
    
    // Move images to the grid container and other content to text container
    Array.from(contentDiv.children).forEach(child => {
      if (child.querySelector('img')) {
        // If this element contains an image, move just the image
        const img = child.querySelector('img');
        const imgWrapper = document.createElement('div');
        imgWrapper.className = 'image-wrapper';
        imgWrapper.appendChild(img.cloneNode(true));
        imageGrid.appendChild(imgWrapper);
      } else if (child.textContent.trim() !== '') {
        // If it's text content, move to text container
        textContent.appendChild(child.cloneNode(true));
      }
    });
    
    // Clear the original content and add organized content
    contentDiv.innerHTML = '';
    if (textContent.children.length > 0) {
      contentDiv.appendChild(textContent);
    }
    if (imageGrid.children.length > 0) {
      contentDiv.appendChild(imageGrid);
    }
  }
});
</script>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
